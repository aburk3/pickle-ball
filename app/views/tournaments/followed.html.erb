<div class="text-center">
  <h1><b>Followed Tournaments</b></h1>
</div>

<%= button_to 'All Tournaments', tournaments_path, method: :get, class: 'btn btn-primary' %><br>

<div class="card-deck">
  <% @tournaments.each do |tournament| %>
    <div class="card">
      <div class="card-body">
        <a href="<%= tournament_path(tournament) %>" class="card-title"><h4 class="media-heading"><%= tournament.name %></h4></a>
        <small><i><%= tournament.city %>, <%= tournament.state %></i></small><br>
        <small>Tournament Director: <%= find_td(tournament) %></small>
        <hr>
        <p class="card-text"><%= tournament.description %></p>
      </div>
      <div class="card-footer">
        <p><%= tournament.follows.count %> <%= (tournament.follows.count) == 1 ? 'Follow' : 'Follows'%></p>
        <small class="text-muted"><%= time_ago_in_words(tournament.created_at) %> ago</small>
      </div>
    </div>
  <% end %>
</div>
