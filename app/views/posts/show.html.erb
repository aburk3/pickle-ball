<h2><u><%= @post.title %></u></h2>
<% content_for :page_title, @post.title %>
<%= link_to(@post.user) do %>
  <strong>by: <%= @post.user.first_name + " " + @post.user.last_name%></strong>
  <span></span>
<% end %>
<br>
<p><%= time_ago_in_words(@post.created_at) %> ago</p>
<br>
<br>
<p>
  Content:<br> <%= @post.content %>
</p>


  <section class="section">
  	<div class="container">
  		<nav class="level">
  		  <!-- Left side -->
  		  <div class="level-left">
  		  </div>
  		  <!-- Right side -->
  		  <div class="level-right">
          <% if current_user == @post.user %>
    		  	<p class="level-item">
    		    	<%= link_to "Edit", edit_post_path(@post), class:"button" %>
    		  	</p>
    		  	<p class="level-item">
    				<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
    				</p>
          <% end %>
  		  </div>
  		</nav>
  		<hr/>
  	</div>
  </section>

  <section class="section comments">
  	<div class="container">
  		<h2 class="subtitle is-5"><strong><%= @post.comments.count %></strong> Comments</h2>
  		<%= render @post.comments %>
  		<div class="comment-form">
  			<hr />
  			<h3 class="subtitle is-3">Leave a reply</h3>
  	 		<%= render 'comments/form' %>
  		</div>
  	</div>
  </section>
