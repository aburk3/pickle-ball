<% if @post %>
  <%= form_for [@post, @post.comments.build] do |f| %>

    <div class="form-group">
      <%= f.label :content %><br>
      <%= f.text_area :content, size: "55x3" %>
    </div>

    <div class="actions">
      <%= f.submit :Submit, class: 'btn btn-success' %>
      <%= link_to "cancel", root_path, :class=>"btn btn-xs btn-danger" %>
    </div>
  <% end %>

<% else %>
  <%= form_for [@tournament, @tournament.tournament_comments.build] do |f| %>

    <div class="form-group">
      <%= f.label :content %><br>
      <%= f.text_area :content, size: "55x3" %>
    </div>

    <div class="actions">
      <%= f.submit :Submit, class: 'btn btn-success' %>
      <%= link_to "cancel", root_path, :class=>"btn btn-xs btn-danger" %>
  </div>
  <% end %>
<% end %>
