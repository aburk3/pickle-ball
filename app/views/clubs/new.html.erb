<%= form_for(@club) do |f| %>
  <% if @club.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors</h2>
      <ul>
        <% @club.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Club Name" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :club_category %><br>
    <%= f.text_field :club_category %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, size: "55x8" %>
  </div>
  <div class="actions">
  	<%= f.submit :Submit, class: 'btn btn-success' %>
  	<%= link_to "cancel", root_path, :class=>"btn btn-xs btn-danger" %>
  </div>

<% end %>
