<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <% if current_user %>
              <h5 class="card-title text-center">Update Profile</h5>
            <% else %>
              <h5 class="card-title text-center">Sign Up</h5>
            <% end %>
            <%= form_for @user do |f| %>

              <% if @user.errors.any? %>
                <div id="error_explanation">
                  <h2>There were some errors</h2>
                  <ul>
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-label-group">
                <% if @user.image.attached? %>
                  <%= f.label :remove_profile_image %>
                  <%= f.check_box :remove_profile_image %>
                <% else %>
                  <%= f.label "Profile photo" %>
                  <%= f.file_field :image %>
                <% end %>
              </div>

              <div class="form-label-group">
                <label for="inputfirst_name"></label>
                <%= f.text_field :first_name, class: "fadeIn", class: "form-control", placeholder: "First Name"%>
              </div>

              <div class="form-label-group">
                <label for="inputlast_name"></label>
                <%= f.text_field :last_name, class: "fadeIn", class: "form-control", placeholder: "Last Name"%>
              </div>
              <% if current_user %>
                <div class="form-label-group">
                  <label for="utpr_d"></label>
                  <%= f.select(:utpr_d, ["5.0 (Doubles)","4.5 (Doubles)","4.0 (Doubles)","3.5 (Doubles)","3.0 (Doubles)","2.5 (Doubles)","2.0 (Doubles)"], {:prompt => '-- Doubles
                    UTPR --'}, class: "fadeIn", class: "form-control")%>
                </div>

                <div class="form-label-group">
                  <label for="utpr_m"></label>
                  <%= f.select(:utpr_m, ["5.0 (Mixed)","4.5 (Mixed)","4.0 (Mixed)","3.5 (Mixed)","3.0 (Mixed)","2.5 (Mixed)","2.0 (Mixed)"], {:prompt => '-- Mixed Doubles
                    UTPR --'}, class: "form-control")%>
                </div>

                <div class="form-label-group">
                  <label for="utpr_s"></label>
                  <%= f.select(:utpr_s, ["5.0 (Singles)","4.5 (Singles)","4.0 (Singles)","3.5 (Singles)","3.0 (Singles)","2.5 (Singles)","2.0 (Singles)"], {:prompt => '-- Singles
                    UTPR --'}, class: "form-control")%><br>
                </div>

                <div class="form-label-group">
                  <label for="state"></label>
                  <%= f.select :state, options_for_select(us_states, selected: current_user.state, prompt: "State"), class: "fadeIn", class: "form-control" %><br>
                </div>

                <div class="form-label-group">
                  <label for="city"></label>
                  <%= f.text_field :city, class: "fadeIn", class: "form-control", placeholder: "City"%>
                </div>

                <div class="form-label-group">
                  <label for="member_num"></label>
                  <%= f.text_field :member_num, class: "fadeIn", class: "form-control", placeholder: "USAPA Member Number"%><br>
                </div>
              <% end %>

              <div class="form-label-group">
                <label for="inputEmail"></label>
                <%= f.text_field :email, class: "fadeIn", class: "form-control", placeholder: "Email Address"%><br>
              </div>

              <% if current_user %>
                <div class="form-label-group">
                  <%= f.password_field :password, class: "fadeIn third", class: "form-control", placeholder: "New Password" %>
                  <label for="inputPassword"></label>
                </div>
                <div class="actions">
                  <br><%= f.submit "Save", class: "fadeIn fourth", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
                </div>
              <% else %>
                <div class="form-label-group">
                  <%= f.password_field :password, class: "fadeIn third", class: "form-control", placeholder: "Password" %>
                  <label for="inputPassword"></label>
                </div>
                <div class="actions">
                  <br><%= f.submit "Sign Up", class: "fadeIn fourth", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
                </div>
                <hr class="my-4">
                <%= link_to "Sign In", root_path, class: "fadeIn fourth", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
                <!-- <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
                <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button> -->
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
