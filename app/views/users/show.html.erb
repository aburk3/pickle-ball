<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-2">
    <% if @user.image %>
      <img src="<%= @user.image %>", class="user_pic">
    <% end %>
    <% if @user != current_user %>
      <h1><%= @user.first_name + " " + @user.last_name %></h1>
    <% end %>
  </div>
  <div class="col-md-6">
    <% if @user == current_user %>
      <h1>Welcome <%= @user.first_name + " " + @user.last_name %>!</h1>
    <% end %>
    <div class="mt-2">
      <% if @user == current_user %>
        <%= button_to 'Create Club', new_club_path, method: :get, class: 'btn btn-success' %><br>
        <%= button_to 'Join New Club', clubs_path, method: :get, class: 'btn btn-primary' %><br>
        <%= button_to 'Create New Post', new_post_path, method: :get, class: 'btn btn-primary' %><br>
      <% end %>
    </div>
  </div>
</div>

  <hr>

<div class="row">
  <% if @user.utpr_d || @user.utpr_m || @user.utpr_s %>
    <div class="col-md-6">
      <div class="d-flex w-100 center">
          <p class="mb-1"><b><u><%= @user.first_name + "'s UTPR Values" %></u></b></p>
      </div>
      <table class="table table-striped table-dark">
        <thead>
          <tr>
            <th scope="col">Doubles</th>
            <th scope="col">Mixed</th>
            <th scope="col">Singles</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @user.utpr_d %></td>
            <td><%= @user.utpr_m %></td>
            <td><%= @user.utpr_s %></td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
  <div class="col-md-6">
    <div class="list-group">
      <a href="<%= clubs_path %>" class="list-group-item list-group-item-action flex-column align-items-start">
          <div class="d-flex w-100 justify-content-between">
              <p class="mb-1"><b>Recent Clubs Created</b></p>
          </div>
      </a>
      <% @clubs.each do |club| %>
        <a href="/clubs/<%= club.id %>" class="list-group-item list-group-item-action flex-column align-items-start">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= club.name %></h5>
          </div>
          <p class="mb-1">Members: <%= club.users.count %> | Club State: <%= club.state %></p>
          <small>Description: <%= club.description %></small>
        </a>
      <% end %>
    </div>
  </div>
</div>

<div class="col-md-6">
  <h3><u>Clubs <%= @user.first_name %> is in:</u></h3>
  <% @user.clubs.each do |club| %>
    <%= link_to club.name, club_path(club) %><br>
  <% end %>
</div>
<br>
<br>

Dylan's Posts:

<% @user.posts.each do |post| %>
  <%= link_to post.title, post_path(post) %>
<% end %>
